<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemalocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>ch.epfl</groupId>
    <artifactId>ch.epfl.insynth.build</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>ch.epfl.insynth.tests</artifactId>
  <packaging>eclipse-test-plugin</packaging>
  
  <properties>
    <testClassArg>ch.epfl.insynth.test.TestSuite</testClassArg>
  </properties>
    
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>ch.epfl</groupId>
      <artifactId>ch.epfl.insynth.library</artifactId>
      <version>1.0.0</version>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <!-- configuration of which test suite to run -->
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-surefire-plugin</artifactId>
        <configuration>
          <showEclipseLog>true</showEclipseLog>
          <redirectTestOutputToFile>true</redirectTestOutputToFile>
          <reportsDirectory>reports</reportsDirectory>
          <testSuite>${project.artifactId}</testSuite>
          <testClass>${testClassArg}</testClass>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
        <execution>
            <id>copy</id>
            <phase>initialize</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ch.epfl</groupId>
                  <artifactId>ch.epfl.insynth.library</artifactId>
                  <outputDirectory>${project.build.directory}/lib</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>

